/**index.wxss**/

.swiperBox {
  width: 690rpx;
  height: 332rpx;
  margin-left: 30rpx;
}

.swiperBox .swiper-item {
  width: 690rpx;
  height: 272rpx;
  position: relative;
}

.swiperBox image {
  width: 690rpx;
  height: 272rpx;
}

.priceBigBox {
  position: absolute;
  left: 0;
  top: 110rpx;
  width: 690rpx;
  display: flex;
  justify-content: center;
}

.priceBigBox .priceBox {
  width: 95rpx;
  height: 130rpx;
  border-radius: 10rpx;
  border: 1px solid #fff;
  color: white;
  font-size: 26rpx;
  padding-left: 15rpx;
  margin-left: 18rpx;
  margin-right: 18rpx;
  line-height: 45rpx;
}

.priceBigBox .priceBox .price1 {
  font-size: 35rpx;
}

.userBox {
  width: 690rpx;
  margin-left: 30rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.userBox .avatarBox {
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
  overflow: hidden;
  float: left;
}

.userBox .avatarBox image {
  width: 88rpx;
  height: 88rpx;
}

.userBox .userinfo-nickname {
  line-height: 88rpx;
  font-size: 26rpx;
  margin-left: 15rpx;
  float: left;
}

.userBox .openApp {
  width: 346rpx;
  height: 70rpx;
  border-radius: 100rpx;
  background: #f59523;
  font-size: 30rpx;
  color: white;
  line-height: 70rpx;
  text-align: center;
  margin-top: 10rpx;
  float: right;
}

.iconBox {
  width: 750rpx;
  margin-top: 20rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.iconBox image {
  width: 64rpx;
  height: 64rpx;
  display: block;
  margin: 0 auto;
  margin-top: 30rpx;
}

.iconBox text {
  font-size: 26rpx;
  display: block;
  text-align: center;
  line-height: 50rpx;
}

.iconBox .iconSbox {
  width: 25%;
  position: relative;
}

.iconBox .iconSbox .redDot {
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  left: 55%;
  top: 15%;
  border-radius: 100%;
  color: white;
  background: red;
  font-size: 16rpx;
  text-align: center;
  line-height: 26rpx;
}

.dayActive {
  font-size: 35rpx;
  font-weight: bold;
  margin-top: 40rpx;
  margin-left: 30rpx;
}

.listBox {
  width: 690rpx;
  height: 260rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #ccc;
  display: flex;
}

.listBox .listImg {
  width: 200rpx;
  height: 200rpx;
  margin-top: 30rpx;
}

.listBox .rightBox {
  width: 440rpx;
  margin-left: 50rpx;
}

.listBox .rightBox .listTitle {
  font-size: 30rpx;
  padding-top: 60rpx;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.timeBox {
  width: 420rpx;
  display: flex;
  font-size: 24rpx;
  color: #ccc;
  justify-content: space-between;
  margin-top: 38rpx;
  vertical-align: middle;
}

.timeBox .look {
  display: flex;
}

.timeBox image {
  width: 28rpx;
  display: block;
  margin-top: 4rpx;
}

.timeBox text {
  display: block;
}

.jiayouBtn {
  position: fixed;
  width: 216rpx;
  left: 267rpx;
  bottom: 0;
}

/* 奖励 */

.awardBox {
  width: 100%;
  height: 100%;
  position: absolute;
  background: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
  z-index: 99;
}

.bg {
  position: absolute;
  top: 5%;
  left: 50%;
  right: 50%;
  -webkit-transform: translateX(-50%);
  width: 668rpx;
  height: 1000rpx;
}

.bg .gx {
  width: 100%;
  font-size: 40rpx;
  font-weight: 600;
  text-align: center;
  color: rgba(255, 97, 3, 1);
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.quanBox {
  margin-left: 100rpx;
  margin-top: 30rpx;
  display: flex;
}

.quanBgBox {
  width: 400rpx;
  height: 98rpx;
  border-radius: 10rpx;
  position: relative;
}

.quanBgBox image {
  width: 400rpx;
  height: 98rpx;
}

.quanBgBox .quanName {
  font-size: 36rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 98rpx;
  text-align: center;
  position: absolute;
  width: 400rpx;
  height: 98rpx;
  left: 0;
  top: 0;
}

.quanNumber {
  font-size: 40rpx;
  color: rgba(255, 101, 59, 1);
  margin-left: 20rpx;
  line-height: 98rpx;
}

.quanTip{
  width: 300rpx;
  margin: 30rpx auto;
  font-size: 30rpx;
  color: #FF6103;
  font-weight: bold;
}

.close{
  width: 81rpx;
  height: 81rpx;
  display: block;
  margin: 150rpx auto;
}