}

.quanBox .quanBtn {
  width: 750rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  background: #ffab05;
  font-size: 36rpx;
  color: white;
}

.quanBox .qbox {
  width: 690rpx;
  background: white;
  margin-left: 30rpx;
  margin-top: 20rpx;
