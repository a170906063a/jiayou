}

.unusebox{
  color: #AAAAAA;
  background: #F8F8F8!important;
}

.quanBox .qbox .qbox1 {
  width: 690rpx;
  height: 124rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx dotted #dfdfdf;
}

.quanBox .qbox .qbox1 .priceBox {
  margin-left: 20rpx;
}

.quanBox .qbox .qbox1 .priceBox .price {
  display: flex;
  color: #f4552e;
  margin-top: 20rpx;
}

.quanBox .qbox .qbox1 .priceBox .unprice{
  color: #EEB0A1;
}

.quanBox .qbox .qbox1 .priceBox .price .price1 {
}

.quanBox .qbox .qbox1 .priceBox .price .price2 {
  font-size: 20rpx;
  margin-top: 18rpx;
}

.quanBox .qbox .qbox1 .priceBox .qname {
  font-size: 20rpx;
}

.quanBox .qbox .qbox1 .descript {
  font-size: 26rpx;
  line-height: 124rpx;
}

.quanBox .qbox .qbox1 .choose {
  width: 33rpx;
  height: 33rpx;
  margin-top: 48rpx;
  margin-right: 20rpx;
}

.quanBox .qbox .qbox2 {
  width: 650rpx;
  margin-left: 20rpx;
  height: 56rpx;
  display: flex;
  font-size: 20rpx;
  line-height: 56rpx;
  justify-content: space-between;
}

.quanBox .qbox .qbox2 .reason{
  color: #F4552E;
}

.quanBox .qbox .qbox3 {
  width: 650rpx;
  margin-left: 20rpx;
  display: flex;
  font-size: 20rpx;
  justify-content: space-between;
  padding-bottom: 20rpx;
}

.unuseAlert{
  width: 750rpx;
  height: 100%;
  z-index: 11;
  position: fixed;
  background: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;  
  display: none;
}

.unuseAlert .unuseAlertBox{
  position: absolute;
  width: 560rpx;
  height: 248rpx;
  background: white;
  left: 50%;
  right: 50%;
  top: 50%;
  bottom: 50%;
  -webkit-transform: translate(-50%,-50%);
  border-radius: 10rpx;
}

.unuseAlert .unuseAlertBox .word{
  text-align: center;
  font-size: 30rpx;
  color: #222222;
  display: flex;
  justify-content: center;
  margin-top: 64rpx;
}

.unuseAlert .unuseAlertBox .word .number{
  color: #F4552E;
}

.unuseAlert .unuseAlertBox .hao{
  width: 176rpx;
  height: 50rpx;
  margin-left: 192rpx;
  top: 158rpx;
  background: #FB4B20;
  border-radius: 20rpx;
  text-align: center;
  line-height: 50rpx;
  color: white;
  font-size: 26rpx;
  margin-top: 50rpx;
}

.unuseAlert .unuseAlertBox .close{
  width: 48rpx;
  position: absolute;
  right: 10rpx;
  top: 5rpx;
  font-size: 40rpx;
  font-family: '微软雅黑';
}