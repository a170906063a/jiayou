/* miniprogram/pages/pay/pay.wxss */
text{width:100%;text-align:center;font-size:30rpx;padding-top:20rpx;display:block;}
.page{position:absolute;width:100%;height:100%;background:#F5F5F5;}
.page1 text{position:absolute;left:0;top:50%;margin-top:-20rpx;text-align:center;font-size:36rpx;font-weight:400;z-index:100;}
.page1 image{position:absolute;left:50%;top:50%;margin:-64px 0 0 -50rpx;width:100rpx;-webkit-animation: myRotate 1s infinite linear;z-index:100;}
.page1 .mask{position:absolute;width:100%;height:100%;left:0;top:0;background:#b4b4b4;}

@keyframes myRotate {
    0% {
        -webkit-transform: rotate(0deg);
    }
    100% {
        -webkit-transform: rotate(360deg);
    }
}

.page2 image {
  width:62rpx;
  margin-top: 150rpx;
}

.page2 text {
    font-size:36rpx;
    font-weight:400;
    color:rgba(34,34,34,1);
}

.page2 .money {
  display:block;
  width:100%;
  text-align:center;
  font-size:80rpx;
  font-weight:600;
  color:rgba(34,34,34,1);
  margin-top: 100rpx;
}

.page2 button {
  position:absolute;
  width:620rpx;
  height:80rpx;
  line-height:80rpx;
  background:rgba(255,171,5,1);
  border-radius:10rpx;
  font-size:36rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  bottom:100rpx;
  left:50%;
  margin-left:-310rpx;
}

.page2 .back-tips{
  position:absolute;
  width:100%;
  height:80rpx;
  line-height:80rpx;
  font-size:30rpx;
  text-align:center;
  font-weight:400;
  color:rgba(34,34,34,1);
  bottom:120rpx;
  left:0;
}